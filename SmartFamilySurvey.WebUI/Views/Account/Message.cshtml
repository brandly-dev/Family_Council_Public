
@{
    ViewData["Title"] = "Sent";
    Layout = "~/Views/Shared/_Layout.cshtml";

}
<style>
    html, body, .container-fluid {
        height: 100% !important;
    }
    .showincenter {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
    }
    main {
        min-height: 100%;
    }
    .wrapper {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
    }
</style>


<div class="wrapper w-100" >
    <div class="BodyContent h-100 position-relative">
        <div class="showincenter text-center">
            <img src="~/Assets/Sent_successful.svg" />
            <h3 class="darkTitle text-center mb-4">@TempData["Message"]</h3>
            <a href="/Account/Login" class="m-0 themeBtn text-white font-12 px-4"> <span class="px-3">Вход </span> </a>
        </div>
    </div>
</div>
