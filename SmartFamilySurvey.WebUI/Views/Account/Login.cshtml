@model ESS.SFS.ViewModel.AdminLogin

@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<input type="hidden" id="success" value="@TempData["success"]" />

<div class="row">
    <div class="col-md-3 LoginLeftBackground ">

    </div>
    <div class="col-md-6">
        <div class="ShowTopLogo">
            <img src="~/Assets/Logo_big.svg" />
        </div>
        <div class="portletBox pb-3">
            <h3 class="text-themegreen logintitle text-center">вход</h3>
            @*<p class="subtitleLogin text-center">You want to join? <a href="javascript:;" class="text-themegreen">request an invite</a></p>*@

            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "kt-form" }))
            {
            <div class="SmallSection">
                <div>
                    <label>Потребителско име:</label>
                    @Html.TextBoxFor(m => m.email, new { @type = "email", @class = "themecustomInput", @placeholder = "имейл", @autocomplete = "off" })
                    @*<input type="email" name="name" placeholder="E-mail" class="" value="" />*@
                </div>
                <div class="text-right minumar mt-1">
                    <a href="javascript:;" class="text-themegreen hiddenBtn"> <img src="~/Assets/Eye_login_page.svg" class="mr-2 " />скрита</a>
                </div>

                <div>
                    <label>Парола:</label>
                    @Html.TextBoxFor(m => m.password, new { @type = "password", @class = "themecustomInput passwordInput", @placeholder = "парола", @autocomplete = "off" })
                    @*<input type="email" name="name" placeholder="E-mail" class="" value="" />*@
                </div>
                <div>
                    <button type="submit" class=" themeBtn btn-square mt-4 rounded font-gmedium w-100"> вход </button>
                    <div class="text-center">
                        <a href="/Account/ForgetPassword" class="theme-link font-gregular">Забравена парола</a>

                    </div>
                    <div class="text-danger">
                        @Html.ValidationSummary(false, "", new { @class = "text-danger" })
                    </div>

                    <p class="smallbottomtext font-gregular">@DateTime.UtcNow.Year всички права запазени.</p>
                </div>
            </div>
            }
        </div>

    </div>
    <div class="col-md-3 LoginrightBackground ">


    </div>
</div>

<script type="text/javascript">
  $(document).ready(function() {
      var msg = '@TempData["success"]';
      if (msg != null && msg != "" && msg != undefined) {
          toastr.success(msg);
      }
      var toggle = 0;
      $('.hiddenBtn').click(function () {
          $('.passwordInput').toggleClass('show-password hide-password');
          if ($('.passwordInput').hasClass('show-password')) {
                  $('.passwordInput').attr("type", "text");
                 
              } else {
                  $('.passwordInput').attr("type", "password");
                 
              }
         
        
      })


  });

</script>
