@using ESS.SFS.DAL;

@if (ViewBag.lstPayments != null && ViewBag.lstPayments.Count > 0)
{
    <div class="BodyContent">
        <div class="  px-3 bg-white">
            <table class="table table-striped table-responsive-md datatble mt-3">
                <thead>
                    <tr>
                        <th>Потребителско име</th>
                        <th>Удобрено на</th>
                        <th>Точки</th>
                        <th>Начин на плащане</th>
                        <th>Статус</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in ViewBag.lstPayments as List<TblPayment>)
                    {
                        <tr class="parentDiv">
                            <input type="hidden" id="hdPaymentId" value="@item.Id" />
                            <td>@item.User.FullName</td>
                            <td>@item.RequestedDate</td>
                            <td>@item.RequestedPoints</td>
                            <td>@item.PaymentMethod</td>
                            @*<td><a href="#"   data-toggle="modal" data-target="#AproveModal"> Approve</a></td>*@
                            <td><a href="#"  id="btnApproved" data-toggle="modal"> Одобряване </a></td>
                        </tr>
                    }

                </tbody>
            </table>

        </div>
    </div>
}
else
{
    <div style="text-align: center; color: red;">
        <span>Не са намерени резултати.</span>
    </div>
}
<div class="modal fade" id="AproveModal" tabindex="-1" role="dialog" aria-labelledby="deleteModal" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-custom" role="document">
        <div class="modal-content rounded-0">
            <div class="modal-body p-2">
                <div class="text-right">
                    <a href="javascript:;" data-dismiss="modal" aria-label="Close"><img src="~/Assets/Close_icon.svg" /></a>
                </div>
                <div class="px-4">
                    <div class="text-center mb-3">
                        <img src="~/Assets/Bee_bulb.svg" class="img-fluid" />
                    </div>
                    <div class="modaldarktitle text-center mb-4">
                        <p class="darkTitle">Сигурни ли сте, че искате да одобрите това плащане?</p>
                    </div>
                    <div class="d-flex align-items-center justify-content mb-3 modalfooterBtn">
                        <button class="themeBtnlight m-0" id="btnYes">Да</button>
                        <button class="themeBtn m-0" data-dismiss="modal" aria-label="Close">Не</button>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
